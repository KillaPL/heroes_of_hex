
<h1>Listing Rosters</h1>
 
<table>
  <tr>
    <th>Name</th>
    <th>Points limit</th>
    <th></th>
  </tr>
 
<% @rosters.each do |roster| %>
  <tr>
    <td><%= link_to roster.name, :action => 'show', :id => roster.id %></td>
    <td><%= roster.points_limit %></td>
    <td><%= link_to 'Destroy', {:action => 'destroy', :id => roster.id}, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
 
